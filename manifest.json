{
  "manifest_version": 2,
  "name": "OTRSPattern",
  "version": "1.1",

  "description": "Put pattern to ticket OTRS",

  "icons": {
    "48": "icons/otrs-48.png"
  },

"browser_specific_settings": {
  "gecko": {
    "id": "OTRSPattern@ukrposhta.ua",
    "update_url": "https://raw.githubusercontent.com/lsdim/OTRSPattern/main/updates.json"
  }
},

  "content_scripts": [
    {
      "matches": ["*://*.help.ukrposhta.loc/otrs/index.pl*"],
      "js": ["OTRSPattern.js"]
    }
  ],
  
  
  "permissions": [
    "storage",
    "*://api.telegram.org/*",
    "*://*.ukrposhta.ua/*",
    "*://identitytoolkit.googleapis.com/*",
    "*://otrs-patterns-default-rtdb.europe-west1.firebasedatabase.app/*",
	"activeTab"
  ],
  
  "page_action": {
	"show_matches": ["*://*.help.ukrposhta.loc/otrs/index.pl*"],
	"default_icon": {
		"16": "icons/otrs-16.png",
		"48": "icons/otrs-48.png"
	},
	"default_title": "OTRS Pattern",
	"default_popup": "popup/Pattern_form.html"
  }

}
